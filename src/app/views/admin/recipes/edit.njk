{% extends "admin/layout.njk" %}

{% block head %}

    <title>Foodfy Manager</title>

{% endblock %}

{% block content %}
    <div class="body container recipes_manager">
            <form method='POST' action="/admin/recipes?_method=PUT" enctype="multipart/form-data">

                <div class="create">
                    <div class="create-grid">
                        <h1>Editando receitas</h1>
                        <button class="button edit" type="submit">Salvar receita</button>
                    </div>

                    {% include 'admin/recipes/fields.njk' %}

                    <input type="hidden" name="id" value="{{ recipe.id }}">
                </div>

            </form>

            <form id='form-delete' method="POST" action="/admin/recipes?_method=DELETE">
                <input type="hidden" name="id" value="{{ recipe.id }}">
                <button class="delete" type="submit">Deletar receita</button>
            </form>
    </div>
    {% include "admin/parts/confirm.njk"%}
{% endblock %}