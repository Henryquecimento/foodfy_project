<div class="item">
    <div>Imagem da receita</div>
    <div>
        <input type="url" ,="," name='image' placeholder="https://..." value='{{ foods.image }}'>
    </div>
</div>

<div class="item">
    <div>Receita</div>
    <div>
        <input type="text" ,="," name='title' placeholder="Qual o nome da receita?" value='{{ foods.title }}'>
    </div>
</div>

<div class="item">
    <div>Chef</div>
    <div>
        <input type="text" ,="," name='chef_name' placeholder="Qual o seu nome?" value='{{ foods.chef_name }}'>
    </div>
</div>

<div class="item">
    <div>Ingredientes</div>
    {% if not foods.ingredients %}
        <div id="ingredients">
            <div class="ingredient">
                <input type="text" name='ingredients[]' placeholder="Adicione um novo ingrediente">
            </div>
        </div>

    {% endif %}

    {% for ingredient in foods.ingredients%}
        <div id="ingredients">
            <div class="ingredient">
                <input type="text" name='ingredients[]' value='{{ingredient}}'>
            </div>
        </div>
    {% endfor %}
    <button type='button' class='add-ingredient'>Adicionar novo ingrediente</button>
</div>

<div class="item">
    <div>Modo de Preparo</div>
    {% if not foods.steps%}

        <div id="steps">
            <div class="step">
                <input type="text" name='steps[]' placeholder="Adicione um novo passo" value=''>
            </div>
        </div>

    {% endif %}
    {% for step in foods.steps%}
        <div id="steps">
            <div class="step">
                <input type="text" name='steps[]' value='{{step}}'>
            </div>
        </div>
        {% endfor%}
        <button type='button' class='add-step'>Adicionar novo passo</button>
    </div>

    <div class="item">
        <div>Informações adicionais</div>
        <div>
            <textarea class="text" name="information">{{ foods.information }}</textarea>
        </div>
    </div>

    <script src="/js/dynamicFields.js"></script>