<div class="item">
    <div>Chef</div>
    <div>
        <select name="name">
            {%for chef of chefOptions%}
                <option value="{{chef.id}}" {% if recipe.chef_id == chef.id %} selected="selected" {%endif%}>{{chef.name}}</option>
                {%endfor%}
            </select>
        </div>
    </div>

    <div class="item">
        <div>Imagem da receita</div>
        <div>
            <input type="url" ,="," name='image' placeholder="https://..." value='{{ foods.image }}'>
        </div>
    </div>

    <div class="item">
        <div>Receita</div>
        <div>
            <input type="text" ,="," name='title' placeholder="Qual o nome da receita?" value='{{ foods.title }}'>
        </div>
    </div>

    <div class="item">
        <div>Ingredientes</div>
        {% if not foods.ingredients %}
            <div id="ingredients">
                <div class="ingredient">
                    <input type="text" name='ingredients[]' placeholder="Adicione um novo ingrediente">
                </div>
            </div>

        {% endif %}

        {% for ingredient in foods.ingredients%}
            <div id="ingredients">
                <div class="ingredient">
                    <input type="text" name='ingredients[]' value='{{ingredient}}'>
                </div>
            </div>
        {% endfor %}
        <button type='button' class='add-ingredient'>Adicionar novo ingrediente</button>
    </div>

    <div class="item">
        <div>Modo de Preparo</div>
        {% if not foods.preparation%}

            <div id="preparation">
                <div class="preparation">
                    <input type="text" name='preparation[]' placeholder="Adicione um novo passo" value=''>
                </div>
            </div>

        {% endif %}
        {% for preparation in foods.preparation%}
            <div id="preparation">
                <div class="preparation">
                    <input type="text" name='preparation[]' value='{{preparation}}'>
                </div>
            </div>
            {% endfor%}
            <button type='button' class='add-step'>Adicionar novo passo</button>
        </div>

        <div class="item">
            <div>Informações adicionais</div>
            <div>
                <textarea class="text" name="information">{{ foods.information }}</textarea>
            </div>
        </div>

        <script src="/js/dynamicFields.js"></script>