{% extends "admin/layout.njk" %}

{% block head %}

    <title>Foodfy Manager</title>
    <link href="/css/privateAccess/chefs/chefsManager.css" rel="stylesheet">

{% endblock %}

{% block content %}

    <section class="manager-container">

        <div class="body-container">

            <div class="title-grid">
                <h1>Gerenciar chefs</h1>

                <button>
                    <a class="create-button" href="/admin/chefs/create">Criar Chef</a>
                </button>
            </div>

            <div class="chefs-grid">

                {% for chef in chefs %}

                    <div class="chef">

                        <div class="chef_avatar">
                            <img src="{{chef.avatar_url}}" alt="Image of {{chef.avatar_url}}">
                        </div>

                        <div class="chef-content">
                            <h3>{{chef.name}}</h3>
                            <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
                        </p>

                    </div>

                </div>

            {% endfor %}
        </div>
    </div>
</section>

<script src="/js/script.js"></script>

{% endblock %}