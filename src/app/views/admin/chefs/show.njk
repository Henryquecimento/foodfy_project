{% extends "admin/layout.njk" %}
{% import  'parts/cards.njk' as cards%}

{% block head %}

    <title>{{ chef.name }}
        | Foodfy</title>
    
{% endblock %}

{% block content %}
    <section class="body container chefs_manager">

        <div class="body-fields">
            <div class="body-header">
                <h1>Chef:
                    {{ chef.name }}</h1>
                <button>
                    <a class="edit-button" href="/admin/chefs/{{chef.id}}/edit">Editar chef</a>
                </button>
            </div>

            <div class="chef">

                <div class="chef_avatar show">
                    <img src="{{chef.img}}" alt="Image of {{chef.filename}}">
                </div>

                <div class="chef-content show">
                    <h1>{{ chef.name }}</h1>
                    <p>{{ chef.total_recipes }}
                        Receitas</p>
                </p>

            </div>
            
            {% call cards.render('recipe container') %}
                <h1>Receitas:</h1>

                <div class="recipes-grid">
                    {% for recipe in recipes %}
                        <div class="recipe">

                            <div class="recipe-img">
                                <img src="{{recipe.files[0].path}}" alt="Image of {{recipe.files[0].name}}">
                            </div>

                            <div class="recipe-content">
                                <h3>{{recipe.title}}</h3>
                                <p>Por
                                    {{recipe.chef_name}}</p>
                                <p>
                                    <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
                                </p>

                            </div>

                        </div>
                    {% endfor %}
                </div>
            {% endcall %}
        </div>
    </section>

{% endblock %}