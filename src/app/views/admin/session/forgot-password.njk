{% extends "admin/layout.njk" %}

{% block header%}
   {% include 'admin/parts/loginHeader.njk' %}
{% endblock%}

{% block content %}
<div class="password body container">
    <form method='POST' action="/admin/forgot-password">
          <div class="header">
              <h3>Esqueceu a senha?</h3>
          </div>

          <div class="fields">
              <div class="item">
                  <div>Email</div>
                  <div class="input">
                      <input 
                        type="email"
                        name="email"
                        placeholder='Digite seu email para recuperar a senha'
                        value='{{ user.email }}'
                        >
                  </div>
              </div>
          </div>
          <div class="button">
            <button class="button" type='submit'>Recuperar</button>
          </div>
    </form>
</div>

{% endblock %}