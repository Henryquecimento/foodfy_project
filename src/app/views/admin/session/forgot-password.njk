{% extends "admin/layout.njk" %}

{% block header%}
   {% include 'admin/parts/loginHeader.njk' %}
{% endblock%}

{% block content %}
<div class="password body container">
    <form method='POST' action="/admin/forgot-password">
          <div class="header">
              <h3>Esqueceu da senha?</h3>
          </div>

          <div class="fields">
              <div class="items">
                  <div>Email</div>
                  <div class="input">
                      <input 
                        type="email"
                        name="email"
                        placeholder='Digite o e-mail cadastrado'
                        value='{{ user.email }}'
                        >
                  </div>
              </div>
          </div>

          <button class="button" type='submit'>Recuperar Senha</button>
    </form>
</div>

{% endblock %}