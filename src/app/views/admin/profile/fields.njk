<div class="admin">
 
    <div class="item">
        <div>Nome</div>
        <div>
            <input 
            type="text" 
            name='name' 
            placeholder="Digite seu nome completo" 
            value='{{ user.name }}'>
        </div>
    </div>

    <div class="item">
        <div>Email</div>
        <div>
            <input 
            type="email" 
            name='email' 
            placeholder="Digite seu email" 
            value='{{ user.email }}'>
        </div>
    </div>
    
    <div class="item">
        <div>Senha</div>
        <div>
            <input 
            type="password" 
            name='password' 
            placeholder="Digite sua senha">
        </div>
    </div>
</div>

