<div class="item">
    <div>Imagem da receita</div>
    <div>
        <input type="url" ,="," name='image' value='{{ foods.image }}'>
    </div>
</div>

<div class="item">
    <div>Nome da receita</div>
    <div>
        <input type="text" ,="," name='title' value='{{ foods.title }}'>
    </div>
</div>

<div class="item">
    <div>Nome do(a) chef</div>
    <div>
        <input type="text" ,="," name='author' value='{{ foods.author }}'>
    </div>
</div>

<div class="item">
    <div>Ingredientes</div>
    {% for ingredient in foods.ingredients%}
        <div id="ingredients">
            <div class="ingredient">
                <input type="text" ,="," name='ingredients[]' value='{{ingredient}}'>
            </div>
        </div>
    {% endfor %}
    <button type='button' class='add-ingredient'>Adicionar novo ingrediente</button>
</div>

<div class="item">
    <div>Modo de Preparo</div>
    {% for step in foods.steps%}
        <div id="steps">
            <div class="step">
                <input type="text" ,="," name='steps[]' value='{{step}}'>
            </div>
        </div>
        {% endfor%}
        <button type='button' class='add-step'>Adicionar novo passo</button>
    </div>

    <div class="item">
        <div>Informações adicionais</div>
        <div>
            <textarea class="text" name="information">{{ foods.information }}</textarea>
        </div>
    </div>

    <script src="/js/dynamicFields.js"></script>